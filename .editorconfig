# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Indentation override for all JS under lib directory
[frontend/**.js]
indent_style = tab
indent_size = 3

[frontend/**.{scss,css}]
indent_style = tab
indent_size = 3

[app/**.scala]
indent_style = tab
indent_size = 3

[app/**.html]
indent_style = tab
indent_size = 3

# Matches the exact files either package.json
[{package.json}]
indent_style = space
indent_size = 2
