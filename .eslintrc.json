{
	"extends": "eslint-config-airbnb",

	"parser": "babel-eslint",

	"rules": {
		"quotes": [2, "single"],
		"linebreak-style": [2, "unix"],
		"semi": [2, "always"],
		"indent": ["error", "tab"],
		"import/default": 0,
		"import/no-duplicates": 0,
		"import/named": 0,
		"import/namespace": 0,
		"import/no-unresolved": 0,
		"import/no-named-as-default": 2
	},

	"ecmaFeatures": {
		"modules": true,
		"jsx": true
	},

	"plugins": [
		"react", "import"
	],

	"settings": {
		"import/parser": "babel-eslint",
		"import/resolve": {
			"moduleDirectory": ["node_modules", "src"]
		}
	},

	"env": {
		"browser": true,
		"worker": true,
		"shared-node-browser": true,
		"node": true
	},

	"parserOptions": {
		"sourceType": "module"
	}
}
